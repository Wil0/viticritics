<%= form_for @movie do |m| %>
  <%= m.file_field :avatar %>
  <%= m.label :titulo %>
  <%= m.text_field :title %>
  <%= m.label :calificación %>
  <%= m.select :rating, (1..10) %>
  <%= m.label :review %>
  <%= m.text_field :review %>
  <%= m.submit @movie.save ? "Actualizar #{@movie.title}" : "Crear película" %>
  <% end %>
