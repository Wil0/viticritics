<!DOCTYPE html>
<html>
  <head>
    <title>Viticritics</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Quarto de cine: aquí empieza Viticritics</h1>
    <% if user_signed_in? %>
      <%= link_to "Cerrar sesión", destroy_user_session_path %>
    <% else %>
      <%= link_to "Iniciar sesión", new_user_registration_path %>
      <%= link_to "Registrarse", new_user_session_path %>
    <% end %>
    <%= notice %>
    <%= yield %>
  </body>
</html>
